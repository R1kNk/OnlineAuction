@model List<SOOS_Auction.Models.BidDetails>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h2>Ставки</h2> <br />
         <ul style=" list-style-type: none; margin: 0;padding: 0;">
            <li style="float:right;">
                <input style="float:right; color:white;" type="button" id="btnRefreshBids" class="btn" value="Обновить" />
            </li>
            <li style="float:left;">
                <strong>Сделано @Model.Count ставок(и)</strong><br />
            </li>
         </ul>
    </div>
    <div class="modal-body">
        @{
                foreach (var item in Model)
                {

                    <div class="row">
                    <div class="col-md-3">
                        <a href="#" style="color:#080E9B; font-size:20px;">@item.UserName</a>
                    </div>
                    <div class="col-md-3">
                        <span style="font-size:15px">@item.bid.Price.ToString("F") бел. руб.</span>
                    </div>
                    <div class="col-md-5">
                        <span style="font-size:15px; text-align:center;">@item.bid.BidDate.ToString("F")</span>   
                    </div>
                       @if (item.LotOwnerUserName == item.CurrentUserName)
                        {
                        <div class="col-md-1">
                            <button id="bid-@item.bid.BidId" type="button" class="close">&times     </button>
                    </div>
                        }

                </div>
                }
            }


    </div>
    <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal"><span style="color:white;">Закрыть</span></button>
    </div>
