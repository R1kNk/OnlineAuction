@model List<SOOS_Auction.Models.ReviewModel>

@foreach (var item in Model)
{
    if (item.isPositive)
    {
        <div class="row" style="margin-left:20px;">
            <div class="col-md-4 review" style="margin-top:10px; margin-bottom:10px; margin-left:20px; border:2px solid #EEEEEE; -moz-border-radius: 10px; -webkit-border-radius: 10px; background-color:#93f2b0;">
                <div class="row">
                    <div class="col-md-3">
                        <img style="width:100%; height:127px;" src="https://drive.google.com/uc?export=view&id=@item.UserFromAvatarUrl" alt="Alternate Text" />
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="@Url.Action("ViewProfile", "Account", new { userId = item.UserFromId })" style="color:#080E9B; font-size:20px;">@item.UserFromUsername</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <strong style="max-width:100%;">@item.Text</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row" style="margin-left:20px;">
            <div class="col-md-4 review" style="margin-top:10px; margin-bottom:10px; margin-left:20px; border:2px solid #EEEEEE; -moz-border-radius: 10px; -webkit-border-radius: 10px; background-color:#ef6262;">
                <div class="row">
                    <div class="col-md-3">
                        <img style="width:100%; height:127px;" src="https://drive.google.com/uc?export=view&id=@item.UserFromAvatarUrl" alt="Alternate Text" />
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="@Url.Action("ViewProfile", "Account", new { userId = item.UserFromId })" style="color:#080E9B; font-size:20px;">@item.UserFromUsername</a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <strong style="max-width:100%;">@item.Text</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
